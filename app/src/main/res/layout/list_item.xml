<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/userImgView"
        android:layout_width="83dp"
        android:layout_height="122dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/giraffe" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="261dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/userImgView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locTextView"
        android:layout_width="138dp"
        android:layout_height="32dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/locTextView"
        app:layout_constraintEnd_toStartOf="@+id/locTextView"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/userImgView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/place" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="34dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/userImgView"
        app:layout_constraintStart_toEndOf="@+id/userImgView"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/repository" />

    <ImageView
        android:id="@+id/follow"
        android:layout_width="44dp"
        android:layout_height="29dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/repositoryTextView"
        app:layout_constraintStart_toEndOf="@+id/repositoryTextView"
        app:srcCompat="@drawable/follow" />

    <TextView
        android:id="@+id/repositoryTextView"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:text="35"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3" />

    <TextView
        android:id="@+id/followTextView"
        android:layout_width="23dp"
        android:layout_height="28dp"
        android:text="35"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/follow"
        app:layout_constraintStart_toEndOf="@+id/follow" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/followTextView"
        app:layout_constraintStart_toEndOf="@+id/followTextView"
        app:srcCompat="@drawable/follower" />

    <TextView
        android:id="@+id/followerTextView"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:text="35"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

</android.support.constraint.ConstraintLayout>